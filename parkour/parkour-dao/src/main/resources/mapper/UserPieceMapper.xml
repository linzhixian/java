<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.funugame.parkour.dao.UserPieceMapper">
	<cache eviction="LRU" flushInterval="86400000" size="6144" readOnly="true"/>


	<insert id="insert" parameterType="UserPiece">
		insert into user_piece set uid=#{uid},id=#{id},piece=#{piece}
	</insert>


	<update id="update" parameterType="UserPiece">
		UPDATE user_piece
		<set>
			<if test="piece != null">piece = #{piece},</if>
		</set>
		WHERE uid = #{uid} and id=#{id}
	</update>

	<delete id="delete" parameterType="UserPiece">
		delete from user_piece WHERE uid = #{uid} and id=#{id}
	</delete>

	<select id="selectPieceList" parameterType="int" resultType="UserPiece">
		select * from user_piece
		<where>
			uid=#{uid}
		</where>
	</select>
	<select id="selectOne" resultType="UserPiece">
		select * from user_piece
		<where>
			uid=#{uid}
			<if test="id!=null"> and id=#{id}</if>
		</where>
	</select>


</mapper>