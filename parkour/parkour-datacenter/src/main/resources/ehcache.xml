	<cache name="friendscoreranklist" eternal="false" maxElementsInMemory="1000" overflowToDisk="false" diskPersistent="false" timeToLiveSeconds="60"
		memoryStoreEvictionPolicy="LRU" />
	<cache name="topscoreranklist" eternal="false" maxElementsInMemory="1000" overflowToDisk="false" diskPersistent="false" timeToLiveSeconds="60"
		memoryStoreEvictionPolicy="LRU" />
	<cache name="recommendfriendlist" eternal="false" maxElementsInMemory="1000" overflowToDisk="false" diskPersistent="false" timeToLiveSeconds="3600"
		memoryStoreEvictionPolicy="LRU" />
	<cache name="gameNotice" eternal="false" maxElementsInMemory="1000" overflowToDisk="false" diskPersistent="false" timeToLiveSeconds="3600"
		memoryStoreEvictionPolicy="LRU" />
	<cache name="scrollSystemNotice1" eternal="false" maxElementsInMemory="1000" overflowToDisk="false" diskPersistent="false" timeToLiveSeconds="3600"
		memoryStoreEvictionPolicy="LRU" />
	<cache name="scrollSystemNotice2" eternal="false" maxElementsInMemory="1000" overflowToDisk="false" diskPersistent="false" timeToLiveSeconds="3600"
		memoryStoreEvictionPolicy="LRU" />

</ehcache>