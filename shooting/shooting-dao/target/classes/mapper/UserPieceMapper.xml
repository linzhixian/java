<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.funugame.parkour.dao.UserPieceMapper">
	<cache eviction="LRU" flushInterval="86400000" size="2048" />


	<insert id="insert" parameterType="UserPiece">
		insert into user_piece set uid=#{uid},id=#{id},piece=#{piece}
	</insert>


	<update id="update">
		UPDATE user_piece set piece=piece+#{piece}

		WHERE uid = #{uid} and id=#{id}
	</update>

	<select id="selectOne" resultType="UserPiece">
		select * from user_piece
		<where>
			uid=#{uid} and id=#{id}
		</where>
	</select>


</mapper>