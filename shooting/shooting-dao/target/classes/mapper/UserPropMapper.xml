<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.funugame.parkour.dao.UserPropMapper">
	<cache eviction="LRU" flushInterval="86400000" size="2048" />

	<insert id="insert" parameterType="UserProp">
		INSERT INTO
		user_prop(uid,id,num)
		value(uid=#{uid},id = #{id},num = #{num})
	</insert>
	<select id="selectPropList" parameterType="UserProp" resultType="userProp">
		select *
		from user_prop where uid=#{uid} and id=#{id}
	</select>
	<select id="selectList" parameterType="int" resultType="UserProp">
		select *
		from user_prop where uid=#{uid}
	</select>

	<update id="update" parameterType="UserProp">
		UPDATE user_prop
		<set>
			<if test="num != null">num = #{num},</if>
		</set>
		WHERE uid = #{uid} and id=#{id}
	</update>
	
	<delete id="delete" parameterType="UserProp">
		delete from WHERE uid = #{uid} and id=#{id}
	</delete>

</mapper>