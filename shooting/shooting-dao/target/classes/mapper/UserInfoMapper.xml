<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.funugame.parkour.dao.UserInfoMapper">
	<cache eviction="LRU" flushInterval="86400000" size="2048" />


	<insert id="insert" parameterType="UserInfo" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO
		user_info(account,password,md5key)
		value(#{account},#{password},#{md5key});

	</insert>


	<select id="selectOne" parameterType="UserInfo" resultType="UserInfo">
		select * from user_view

		<where>
			<if test="id != null">
				and id = #{id}
			</if>
			<if test="account != null">
				and account = #{account}
			</if>
			<if test="password != null">
				and password = #{password}
			</if>
		</where>

	</select>

	<select id="selectOneUser" parameterType="User" resultType="User">
		select * from user_view
		where
		id = #{id} and password = #{password}

	</select>
	<update id="update" parameterType="UserInfo">
		UPDATE user_info
		<set>
			<if test="account != null">account = #{account},</if>
			<if test="password != null">password = #{password},</if>
			<if test="rolename != null">rolename = #{rolename},</if>
		</set>
		WHERE id = #{id}
	</update>



	<select id="selectList" parameterType="UserInfo" resultType="UserInfo">
		select * from user_info
		<where>
			<if test="name != null">
				and account = #{name}
			</if>
		</where>
	</select>


	<insert id="insertUserVary" parameterType="UserVary">
		INSERT INTO
		user_vary(uid,exp,age,gold,diamond,strength,honour)
		value(#{uid},#{exp},#{age},#{gold},#{diamond},#{strength},#{honour})
	</insert>


</mapper>